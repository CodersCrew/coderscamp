datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  githubId  Int      @unique
  fullName  String
  email     String
  image     String
  city      String?
  gender    String?
  birthYear Int?
  isStudent Boolean?
  Survey    Survey?
}

model Survey {
  userId                  Int      @unique
  user                    User     @relation(fields: [userId], references: [id])
  description             String
  alreadyTookCourse       Boolean
  reasonForRetakingCourse String?
  expectations            String
  experience              String
  uniques                 String
  plans                   String
  unavailability          String
  averageTime             Int
  associatedWords         String[]
  courseInformationSource String
}
