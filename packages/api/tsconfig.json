{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "incremental": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@coderscamp/shared/*": ["../shared/src/*"],
      "@/automation/*": ["src/module/automation/*"],
      "@/read/*": ["src/module/read/*"],
      "@/write/*": ["src/module/write/*"],
      "@/module/*": ["src/module/shared/*"],
      "@/events/*": ["src/module/shared/events/*"],
      "@/commands/*": ["src/module/shared/commands/*"],
      "@/crud/*": ["src/crud/*"],
      "@/shared/*": ["src/shared/*"],
      "@/prisma/*": ["src/shared/prisma/*"]
    },
    "sourceMap": true,
    "target": "es2017",
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }]
  },
  "include": ["src", "../shared/src"]
}
