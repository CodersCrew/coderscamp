{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": false,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      "@coderscamp/shared/*": ["../shared/src/*"],
      "@coderscamp/ui/*": ["../ui/src/*"],
      "@/common/*": ["src/common/*"],
      "@/components/*": ["src/components/*"],
      "@/modules/*": ["src/modules/*"],
      "@/mocks/*": ["src/mocks/*"],
      "@/services/*": ["src/services/*"]
    },
    "target": "ESNext"
  },
  "include": ["src", "../shared/src", "../ui/src"]
}
